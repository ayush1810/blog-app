<% include ./partials/header.ejs %>
<div class="ui main text container">
    <div class="ui huge header">
        Welcome To My Blog!
    </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach( function(blog){ %>
              <div class="item">
                    <div class="image">  <img src=" <%= blog.image %>"  width="500" height="500"> </div>
                    <div class="content">
                        <a href="/blogs/<%= blog._id %>" class="header"> <h2> <%= blog.title %> </h2></a>
                        <div class="meta">
                            <span> <%= blog.created.toDateString() %> </span>
                        </div>
                        <div class="description">
                              <p> <%- blog.body.substring(0,100) %> ... </p>
                        </div>
                        <div class="extra">
                            <a href="/blogs/<%= blog._id %> " class="ui floated blue inverted button">
                                Read More <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
              </div>
            <% }) %>
        </div>
    </div>
</div>
<% include ./partials/footer %>
