<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header"> <%= blog.title %> </div>
    <div class="ui top attached segment">
        <div class="item">
                    <img class="ui centered rounded image" src=" <%= blog.image %>"  width="500" height="500">
                    <div class="content">
                        <span> <%= blog.created.toDateString() %> </span>
                    </div>
                    <div class="description">
                        <p> <%- blog.body %> </p>
                    </div>
        </div>
        <a class="ui green basic button" href="/blogs/<%= blog.id %>/edit">Edit Post</a>
        <form id="deleteForm" action="/blogs/<%= blog._id %>?_method=DELETE"  method="POST">
            <button class="ui red basic button">Delete Post</button>
        </form>
    </div>
</div>

<% include ./partials/footer %>
